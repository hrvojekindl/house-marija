		<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
		<script type="text/javascript">
			function init_gmap() {
				(function($) {
					$(function() {
						var map = new google.maps.Map($('#map_canvas')[0], {
							center: new google.maps.LatLng(44.000000, 15.086353),
							mapTypeId: google.maps.MapTypeId.ROADMAP,
							scrollwheel: false,
							zoom: 10
						});
						var markers = [
							{
								pos: [44.075123, 15.001209],
								title: lang.house_marija,
								img: 'img/map/villa.png'
							},
							{
								pos: [44.133685, 14.871704],
								title: lang.saharun_beach,
								img: 'img/map/palm-tree.png'
							},
							{
								pos: [44.152073, 14.820347],
								title: lang.veli_rat_lighthouse,
								img: 'img/map/lighthouse.png'
							},
							{
								pos: [43.891437, 15.155771],
								title: lang.telascica_nature_park,
								img: 'img/map/fjord.png'
							},
							{
								pos: [43.823118, 15.29726],
								title: lang.kornati_national_park,
								img: 'img/map/shore.png'
							}
						];
						var infowindow = null;
						for (var i = 0; i < markers.length; i++) {
							var mopt = markers[i];
							var marker = new google.maps.Marker({
								position: new google.maps.LatLng(mopt.pos[0], mopt.pos[1]),
								icon: new google.maps.MarkerImage(mopt.img,
									new google.maps.Size(32, 37)),
								title: mopt.title,
								map: map
							});
							(function(mopt, marker) {
								google.maps.event.addListener(marker, 'click', function() {
									if (infowindow) infowindow.close();
									infowindow = new google.maps.InfoWindow({
										content: $('<div>' + mopt.title + '</div>')[0],
										position: marker.getPosition()
									});
									infowindow.open(map);
								});
							})(mopt, marker);
						}
					});
				})(jQuery);
			}
		</script>
		<script script type="text/javascript">      
			(function($) {
				$(function() {
					var navbar = $('.navbar');
					var brand = navbar.find('a.brand');
					var lang_items = navbar.find('a.lang');
					var menu_items = navbar.find('ul.nav li');
					brand.click(function() {
						menu_items.removeClass('active');
						navbar.find('div.nav-collapse.in.collapse').collapse('hide');
					});
					menu_items.click(function() {
						navbar.find('div.nav-collapse.in.collapse').collapse('hide');
					});

					$('ul.elastislide-list').each(function() {
						var elem = $(this);
						var rel = elem.attr('data-rel');
						var sets = elem.attr('data-image-sets').split(/\s+/g);
						var counts = elem.attr('data-image-counts').split(/\s+/g);
						for (var i = 0; i < sets.length; i++) {
							var name = sets[i];
							var cnt = counts[i];
							for (var j = 1; j <= cnt; j++) {
								var title = lang[name + '_title_' + j];
								if (!title) title = '';
								elem.append([
									'<li>',
										'<a title="' + title + '" href="img/' + name + '/' + name + '-' + j + '.jpg" rel="lightbox[' + rel + ']">',
											'<img src="img/' + name + '/thumb/' + name + '-' + j + '.jpg">',
										'</a>',
									'</li>'
								].join(''));
							}
						}
						elem.elastislide({ minItems: 1 });
					});

				});
			})(jQuery);
		</script>
