<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title><%= replace "house" %> Marija</title>
    <link href="css/bootstrap.css" rel="stylesheet" media="screen">
    <link href="css/bootstrap-responsive.css" rel="stylesheet" media="screen">
    <link href="css/lightbox.css" rel="stylesheet" media="screen">
    <link href="css/global.css" rel="stylesheet" media="screen">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <![endif]-->
    <script src=<%= replace "language-js-src" %>></script>
    <script type="text/javascript">
      function init_gmap() {
        var latlon = new google.maps.LatLng(44.075123, 15.001209);
        var elem = document.getElementById("map_canvas");
        var map = new google.maps.Map(elem, {
          mapTypeId: google.maps.MapTypeId.ROADMAP,
          scrollwheel: false,
          center: latlon,
          zoom: 11
        });

        var content = document.createElement("div");
        content.innerHTML = lang.house_marija;
        var infowindow = new google.maps.InfoWindow({
          content: content,
          position: latlon
        });

        var marker = new google.maps.Marker({
          title: lang.house_marija,
          position: latlon,
          map: map
        });

        google.maps.event.addListener(marker, "click", function() {
          infowindow.open(map);
        });
      }
    </script>
  </head>
  <body onload="init_gmap()" data-spy="scroll" data-target=".navbar">
    <!-- NAVBAR
    ================================================== -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#"><%= replace "house" %> Marija</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a href="#about"><%= replace "about" %></a></li>
              <li><a href="#location"><%= replace "location" %></a></li>
              <li><a href="#accommodation"><%= replace "accommodation" %></a></li>
              <li><a href="#contact"><%= replace "contact" %></a></li>
            </ul>
            <ul class="nav pull-right">
              <li><a title="en" class="lang en" href="/" style=<%= replace "text-decoration-en" %>>en</a></li>
              <li><a title="de" class="lang de" href="/de/" style=<%= replace "text-decoration-de" %>>de</a></li>
              <li><a title="it" class="lang it" href="/it/" style=<%= replace "text-decoration-it" %>>it</a></li>
              <li><a title="hr" class="lang hr" href="/hr/" style=<%= replace "text-decoration-hr" %>>hr</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Carousel
    ================================================== -->
    <div class="container">
      <div id="carousel" class="carousel slide" data-interval="false">
        <div class="carousel-inner">
          <div class="item active">
            <img src="img/carousel/beach.jpg" alt="">
            <div class="container">
              <div class="carousel-caption">
                <h1>Example headline.</h1>
                <p class="lead"><%= replace "lead1" %></p>
                <a class="btn btn-large btn-primary" href="#">Sign up today</a>
              </div>
            </div>
          </div>
          <div class="item">
            <img src="img/carousel/brbinj.jpg" alt="">
            <div class="container">
              <div class="carousel-caption">
                <h1>Another example headline.</h1>
                <p class="lead"><%= replace "lead2" %></p>
                <a class="btn btn-large btn-primary" href="#">Learn more</a>
              </div>
            </div>
          </div>
          <div class="item">
            <img src="img/carousel/flowers.jpg" alt="">
            <div class="container">
              <div class="carousel-caption">
                <h1>One more for good measure.</h1>
                <p class="lead"><%= replace "lead3" %></p>
                <a class="btn btn-large btn-primary" href="#">Browse gallery</a>
              </div>
            </div>
          </div>
        </div>
        <a class="left carousel-control" href="#carousel" data-slide="prev">&lsaquo;</a>
        <a class="right carousel-control" href="#carousel" data-slide="next">&rsaquo;</a>
      </div>
    </div>

    <section id="about">
      <div class="container">
        <h3><%= replace "about" %></h3>
      </div>
    </section>

    <section id="location">
      <div class="container">
        <h3><%= replace "location" %></h3>
        <div class="row-fluid">
          <div id="map_canvas" class="span8"></div>
          <div class="span4"></div>
        </div>
      </div>
    </section>

    <section id="accommodation">
      <div class="container">
        <h3><%= replace "accommodation" %></h3>
        <div class="imageRow">
          <div class="set">
            <div class="single">
              <a title=<%= replace "img1-title" %> href="img/examples/image-1.jpg" rel="lightbox[ex]">
                <img src="img/examples/thumb-1.jpg">
              </a>
            </div>
            <div class="single">
              <a title=<%= replace "img2-title" %> href="img/examples/image-2.jpg" rel="lightbox[ex]">
                <img src="img/examples/thumb-2.jpg">
              </a>
            </div>
            <div class="single">
              <a title=<%= replace "img3-title" %> href="img/examples/image-3.jpg" rel="lightbox[ex]">
                <img src="img/examples/thumb-3.jpg">
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="contact">
      <div class="container">
        <h3><%= replace "contact" %></h3>
      </div>
    </section>

    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/lightbox.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <script script type="text/javascript">      
      (function($) {
        $(function() {
          var lang_items = $("a.lang");
          var menu_items = $("ul.nav li");
          $("a.brand").click(function() {
            menu_items.removeClass("active");
            $("div.nav-collapse.in.collapse").collapse("hide");
          });
          menu_items.click(function() {
            $("div.nav-collapse.in.collapse").collapse("hide");
          });
        });
      })(jQuery);
    </script>
  </body>
</html>

